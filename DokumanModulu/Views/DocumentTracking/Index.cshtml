@model PagedList.IPagedList<DokumanModulu.Entity.DocumentTracking>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<div class="container mt-5 mb-5">
    <h2><i class="fa fa-file-text" aria-hidden="true"></i> DOKÜMAN LİSTESİ</h2>
    <hr />
    @if (User.IsInRole("admin"))
    {
        <p><strong>Toplam Kayıt Sayısı:</strong> @ViewBag.TotalRecords</p>
    }
    <div class="row mb-3">
        <div class="col-md-6">
            <a href="@Url.Action("Create")" class="btn btn-success rounded">
                <i class="fa fa-plus" aria-hidden="true"></i> Doküman Ekle
            </a>
        </div>
        <div class="col-md-6">
            @using (Html.BeginForm("Index", "DocumentTracking", FormMethod.Get, new { id = "filterForm" }))
            {
                <div class="input-group">
                    <input type="text" name="searchString" id="searchInput" class="form-control" placeholder="Ara..." value="@Request.QueryString["searchString"]" />
                    <div class="input-group-append">
                        <!-- Klasör seçimi için dropdown -->
                        <select name="selectedFolder" id="selectedFolder" class="form-control">
                            <option value="">Tüm Klasörler</option>
                            @foreach (var folder in ViewBag.Folders)
                            {
                                <option value="@folder" @(folder == ViewBag.SelectedFolder ? "selected" : "")>@folder</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-primary rounded ml-2">Ara</button>
                        <button type="button" id="resetButton" class="btn btn-secondary rounded ml-2">Sıfırla</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Path)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CreatedUserId)
                </th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Path)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        <a href="#" class="view-user-details" data-toggle="modal" data-target="#userDetailsModal" data-id="@item.CreatedUserId">
                            @item.CreatedUserId
                        </a>
                    </td>
                    <td>
                        <a href="@Url.Action("ViewFile", new { id = item.Id })" class="btn btn-info" title="Görüntüle" target="_blank">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                        </a>
                        <a href="@Url.Action("ViewFile", new { id = item.Id })" class="btn btn-success" title="İndir" download>
                            <i class="fa fa-download" aria-hidden="true"></i>
                        </a>
                        @if (User.IsInRole("admin"))
                        {
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary" title="Düzenle">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" data-id="@item.Id" title="Sil">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = Request.QueryString["searchString"], selectedFolder = ViewBag.SelectedFolder }))
    </div>
</div>

<!-- Silme Onayı Modali -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bu dokümanı silmek istediğinize emin misiniz?
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", "DocumentTracking", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteDocumentId" />
                    <button type="submit" class="btn btn-danger rounded">Sil</button>
                    <button type="button" class="btn btn-secondary rounded" data-dismiss="modal">İptal</button>
                }
            </div>
        </div>
    </div>
</div>

<!-- Kullanıcı Detayları Modali -->
<div class="modal fade" id="userDetailsModal" tabindex="-1" role="dialog" aria-labelledby="userDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userDetailsModalLabel">Kullanıcı Detayları</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="userDetailsContent"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<script type="text/javascript">
    $('#deleteModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget)
        var documentId = button.data('id')
        var modal = $(this)
        modal.find('.modal-footer #deleteDocumentId').val(documentId)
    })

    $('#userDetailsModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget)
        var userId = button.data('id')
        var modal = $(this)
        var userDetailsContent = modal.find('#userDetailsContent')

        // Kullanıcı detaylarını yükle
        $.ajax({
            url: '@Url.Action("Details", "Account")',
            data: { id: userId },
            success: function (data) {
                userDetailsContent.html(data)
            },
            error: function () {
                userDetailsContent.html('<p>Kullanıcı bilgileri yüklenemedi.</p>')
            }
        })
    })

    $('#resetButton').on('click', function () {
        $('#searchInput').val('');
        $('select[name="selectedFolder"]').val('');
        window.location.href = '@Url.Action("Index", "DocumentTracking")';
    });

    // Klasör dropdown listesinde değişiklik olduğunda formu gönder
    $('#selectedFolder').on('change', function () {
        $('#filterForm').submit();
    });
</script>

<style>
    .pagination li {
        margin: 0 5px;
    }

        .pagination li a, .pagination li span {
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-right: 5px;
        }

            .pagination li a:hover, .pagination li span:hover {
                background-color: #eee;
            }

    .pagination .active a, .pagination .active span {
        background-color: #007bff;
        color: white;
        border-color: #007bff;
    }

    .pagination .disabled span {
        color: #6c757d;
    }
</style>