<!doctype html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/theme/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title - Ana Sayfa</title>

    <style>
        html {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar-custom {
            background-color: royalblue;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: white;
            }

                .navbar-custom .nav-link:hover {
                    color: #d1d1e0;
                }

            .navbar-custom .navbar-toggler-icon {
                color: white;
            }

            .navbar-custom .dropdown-menu {
                background-color: royalblue;
            }

            .navbar-custom .dropdown-item {
                color: white;
            }

                .navbar-custom .dropdown-item:hover {
                    background-color: #d1d1e0;
                }

        .bold-font {
            font-weight: bold;
        }

    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand bold-font" href="#">DOKÜMAN MODÜLÜ</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"><i class="fa fa-bars"></i></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("Index", "DocumentTracking")"><i class="fa fa-file-text" aria-hidden="true"></i> Dokümanlar</a>
                        </li>
                        if (User.IsInRole("admin"))
                        {
                            <li class="nav-item active">
                                <a class="nav-link" href="@Url.Action("Index", "Account")"><i class="fa fa-users" aria-hidden="true"></i> Kullanıcılar</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="@Url.Action("Index", "Log")"><i class="fa fa-history" aria-hidden="true"></i> İşlem Geçmişi</a>
                            </li>
                        }
                    }
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item active">
                            <span class="nav-link"><i class="fa fa-user-circle-o" aria-hidden="true"></i> @User.Identity.Name</span>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/Account/Logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Çıkış Yap</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item active">
                            <a class="nav-link" href="/Account/Login"><i class="fa fa-sign-in" aria-hidden="true"></i> Giriş Yap</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()


    <footer class="footer mt-auto py-3">
        <div class="container">
            <span class="text-muted">DokumanModulu</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/theme/js/holder.min.js" type="text/javascript"></script>
</body>

</html>
